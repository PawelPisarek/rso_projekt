{% extends 'base.html.twig' %}

{% block body %}


    {% if checkedByAdmin %}
        <h1>Posty sprawdzone przez admina</h1>

    {% else %}
        <h1>Posty nie sprawdzone przez admina</h1>
    {% endif %}

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Checkedbyadmin</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>{% if post.checkedByAdmin %}Yes{% else %}No{% endif %}</td>
                <td>{{ post.user }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
